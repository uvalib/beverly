<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:saxon="http://servicemix.apache.org/saxon/1.0"
       xmlns:indexing="urn:lib:indexing"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:lib="http://www.lib.virginia.edu/ole/repository-relationships/"
       xsi:schemaLocation="http://servicemix.apache.org/saxon/1.0 http://repo.open.iona.com/maven2/org/apache/servicemix/servicemix-saxon/2011.01.0-fuse-00-00/servicemix-saxon-2011.01.0-fuse-00-00.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <saxon:xslt service="indexing:single-datastream-xslt" endpoint="transform" copyProperties="true">
    
    <property name="expression">
      <bean class="org.apache.servicemix.expression.PropertyExpression">
        <property name="property" value="stylesheetURL" />
      </bean>
    </property>
    
  </saxon:xslt>

  <bean class="org.apache.servicemix.common.osgi.EndpointExporter" />

</beans>
