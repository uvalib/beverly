<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
    http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    
    <description>Listens for JMS messages from the repositories</description>
    
    <camelContext id="repolistener" xmlns="http://camel.apache.org/schema/blueprint" streamCache="true">
        
        <jmxAgent id="agent" disabled="true"/>
        
        <route>
            <from uri="activemq:queue:fedora.apim.update?concurrentConsumers=4"/>
            <to uri="nmr:api-m-jms"/>
        </route>
        
    </camelContext>
    
    <bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
        <property name="connectionFactory">
            <reference interface="javax.jms.ConnectionFactory"/>
        </property>
    </bean>
